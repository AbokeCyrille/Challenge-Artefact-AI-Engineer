
# Application

APP_NAME=Artefact_ChatVote
ENV=development
DEBUG=false


# Paths

PROJECT_ROOT=.
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
DB_PATH=data/elections.duckdb


# PDF Ingestion

PDF_SOURCE_PATH=data/raw/EDAN_2025_RESULTAT_NATIONAL_DETAILS.pdf
PDF_HASH_ALGO=sha256


# SQL & Analytics

SQL_MAX_ROWS=100
SQL_DEFAULT_LIMIT=50


# RAG / Vector Search
FAISS_INDEX_PATH=data/processed/faiss_index
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32


# LLM (Local)

LLM_PROVIDER=local
LLM_MODEL_NAME=sqlcoder
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.0


# Streamlit

STREAMLIT_THEME=light
STREAMLIT_DEBUG=false


# Evaluation

EVAL_TOLERANCE=0.01
EVAL_MAX_ERRORS_DISPLAYED=10


# Safety & Guardrails

FORBIDDEN_SQL_KEYWORDS=DROP,DELETE,UPDATE,INSERT,ALTER
